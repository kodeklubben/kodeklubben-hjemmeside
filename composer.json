{
    "name": "kodeklubben/kodeklubben-hjemmeside",
    "license": "proprietary",
    "type": "project",
    "description": "Utviklingsprosjekt for kodeklubben som sikter mot Ã¥ lage en generisk hjemmeside som kan brukes av alle landets kodeklubber.",
    "autoload": {
        "psr-4": {
            "AppBundle\\": "src/AppBundle",
            "CodeClubBundle\\": "src/CodeClubBundle",
            "CourseBundle\\": "src/CourseBundle",
            "ImageBundle\\": "src/ImageBundle",
            "StaticContentBundle\\": "src/StaticContentBundle",
            "UserBundle\\": "src/UserBundle"
        },
        "classmap": [ "app/AppKernel.php", "app/AppCache.php" ]
    },
    "require": {
        "php"                                  : ">=7.0",
        "doctrine/doctrine-bundle"             : "~1.5",
        "doctrine/doctrine-fixtures-bundle"    : "~2.2",
        "doctrine/orm"                         : "~2.4",
        "erusev/parsedown"                     : "~1.5",
        "ezyang/htmlpurifier"                  : "~4.7",
        "incenteev/composer-parameter-handler" : "~2.1",
        "ircmaxell/password-compat"            : "~1.0",
        "knplabs/knp-paginator-bundle"         : "~2.4",
        "leafo/scssphp"                        : "~0.1.5",
        "patchwork/jsqueeze"                   : "~1.0",
        "sensio/distribution-bundle"           : "~5.0",
        "sensio/framework-extra-bundle"        : "~3.0",
        "symfony/assetic-bundle"               : "~2.6",
        "symfony/monolog-bundle"               : "~2.7",
        "symfony/swiftmailer-bundle"           : "~2.3",
        "symfony/symfony"                      : "~3.2",
        "twig/extensions"                      : "~1.2",
        "friendsofsymfony/jsrouting-bundle"    : "^1.6",
        "symfony/filesystem"                   : "^2.8",
        "doctrine/doctrine-migrations-bundle"  : "^1.0",
        "phpunit/phpunit"                      : "^5.5",
        "exercise/htmlpurifier-bundle"         : "^0.2.3",
        "egeloen/ckeditor-bundle"              : "^4.0"
    },
    "require-dev": {
        "ext-pdo_sqlite"                       : "*",
        "sensio/generator-bundle"              : "~3.0",
        "friendsofphp/php-cs-fixer"            : "^1.11"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "build": [
            "php app/console assets:install --symlink web",
            "npm install",
            "gulp build:dev",
            "php app/console doctrine:database:create --env=dev",
            "php app/console doctrine:schema:update --force --env=dev",
            "php app/console doctrine:fixtures:load --env=dev -n"
        ]
    },
    "config": {
        "bin-dir": "bin",
        "platform": {
            "php": "7.0"
        }
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml",
            "env-map": {
                "database_url": "DATABASE_URL",
                "secret": "SYMFONY_SECRET"
            }
        }
    }
}
